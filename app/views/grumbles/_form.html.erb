<%= form_for @grumble, method: 'post', remote: true, html: {class: 'form-horizontal', role: 'form'} do |f| %>
  <% if @grumble.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@grumble.errors.count, "error") %> prohibited this grumble from being saved:
      </h2>
      <ul>
        <% @grumble.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :author, for: 'grumble_author', class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :author, class: 'form-control', placeholder: 'author', required: true, autofocus: true %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :content, for: 'grumble_content', class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :content, class: 'form-control', placeholder: 'content', required: true %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :title, for: 'grumble_title', class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :title, class: 'form-control', placeholder: 'title', required: true %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :image, for: 'grumble_image', class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :image, class: 'form-control', placeholder: 'image', required: true %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :avatar, for: 'grumble_avatar', class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :avatar, class: 'form-control', placeholder: 'avatar', required: true %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :Save, class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>